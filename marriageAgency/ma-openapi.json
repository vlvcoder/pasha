{
    "openapi": "3.0.3",
    "info": {
        "title": "marriageAgency",
        "description": "REST API MarriageAgency application",
        "version": "0.0.3",
        "contact": {
            "name": "Owner name",
            "email": "owner@mail.ru"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3006",
            "description": "MOCK-сервер"
        },
        {
            "url": "http://blabla.com",
            "description": "Несуществующий сервер"
        }
    ],
    "tags": [
        {
            "name": "user",
            "description": "Пользователь"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "operationId": "getUsers",
                "summary": "Запрос списка пользователей",
                "description": "Запрос списка пользователей, желающих вступить в брак",
                "tags": [
                    "user"
                ],
                "parameters": [
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Поле сортировки",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список пользователей, желающих вступить в брак",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": [
                                            "id",
                                            "name",
                                            "surname",
                                            "age"
                                        ],
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "format": "int64",
                                                "description": "id пользователя",
                                                "example": 123
                                            },
                                            "name": {
                                                "type": "string",
                                                "description": "Имя",
                                                "example": "Tom"
                                            },
                                            "surname": {
                                                "type": "string",
                                                "description": "Фамилия",
                                                "minLength": 2,
                                                "example": "Cruise"
                                            },
                                            "age": {
                                                "type": "integer",
                                                "description": "Возраст",
                                                "example": 35
                                            },
                                            "gender": {
                                                "type": "string",
                                                "description": "Пол",
                                                "example": "male",
                                                "enum": [
                                                    "male",
                                                    "female"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Ошибка",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "description": "Сведения об ошибке",
                                    "required": [
                                        "message"
                                    ],
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "description": "Сообщение пользователю об ошибке",
                                            "example": "Ошибка подключения к базе данных"
                                        },
                                        "details": {
                                            "type": "string",
                                            "description": "Дополнительные сведения об ошибке",
                                            "example": "Дополнительные сведения об ошибке: code, stack trace ..."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}